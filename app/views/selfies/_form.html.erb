<%= simple_form_for @selfie, html: {id: 'notiegram', multipart: true } do |f| %>
  <% if @selfie.errors.any? %>
    <div id="errors">
      <p>
        <%= @selfie.errors.count %>
        Prevented from submitting
      </p>
      <ul>
        <% @selfie.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="panel-body">
    <%= f.input :message, input_html: { class: 'form-control' }, maxlength: 40 %>
    <%= f.input :email_custom, type:'email', autofocus: true, required: true, error: true, input_html: { class: 'form-control' } %>
    <p class="help-block text-danger"></p>
  </div>
  <div id="dropin"></div>
  <%= f.button :submit, "Στείλε το Notiegram", class: "btn btn-red" %>
<% end %>
